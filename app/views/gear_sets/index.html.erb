<h1>Gear Sets</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gear_sets.each do |gear_set| %>
      <tr>
        <td><%= link_to 'Show', gear_set %></td>
        <td><%= link_to 'Edit', edit_gear_set_path(gear_set) %></td>
        <td><%= link_to 'Destroy', gear_set, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

