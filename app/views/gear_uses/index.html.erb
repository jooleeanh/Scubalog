<p id="notice"><%= notice %></p>

<h1>Gear Uses</h1>

<table>
  <thead>
    <tr>
      <th>Gear set</th>
      <th>Gear</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gear_uses.each do |gear_use| %>
      <tr>
        <td><%= gear_use.gear_set %></td>
        <td><%= gear_use.gear %></td>
        <td><%= link_to 'Show', gear_use %></td>
        <td><%= link_to 'Edit', edit_gear_use_path(gear_use) %></td>
        <td><%= link_to 'Destroy', gear_use, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

