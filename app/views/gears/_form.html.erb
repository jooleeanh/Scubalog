<%= simple_form_for(@gear) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :category %>
    <%= f.input :brand %>
    <%= f.input :name %>
    <%= f.input :size %>
    <%= f.input :detail %>
    <%= f.input :purchased_on %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
