<p id="notice"><%= notice %></p>

<h1>Gears</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Brand</th>
      <th>Name</th>
      <th>Size</th>
      <th>Detail</th>
      <th>Purchased on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gears.each do |gear| %>
      <tr>
        <td><%= gear.category %></td>
        <td><%= gear.brand %></td>
        <td><%= gear.name %></td>
        <td><%= gear.size %></td>
        <td><%= gear.detail %></td>
        <td><%= gear.purchased_on %></td>
        <td><%= link_to 'Show', gear %></td>
        <td><%= link_to 'Edit', edit_gear_path(gear) %></td>
        <td><%= link_to 'Destroy', gear, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gear', new_gear_path %>
